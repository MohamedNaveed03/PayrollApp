@model IEnumerable<PayrollApp.Models.Employee>

@{
    ViewData["Title"] = "Employee Screen";
}

<h1>List of Employees</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Code)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.JobTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.YearsWorked)
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Code)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.JobTitle.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.YearsWorked)
                </td>
                <td>
                    <a asp-action="Create" asp-route-id="@item.Id" class="btn btn-success btn-sm">Create</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Read</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Update</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

